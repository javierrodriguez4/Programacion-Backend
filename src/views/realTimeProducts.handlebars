<title>Carga de Productos</title>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">



<div>
    <h2>Ingrese el nuevo producto que quiere agregar al stock</h2>
</div>
<form action="/products" method="post">
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Titulo</label>
    <input type="text" name="title" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
     <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Descripcion</label>
    <input type="text" name="description" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"><div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Categoria</label>
    <input type="text" name="category" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
     <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Precio</label>
    <input type="text" name="price" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
     <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">URL de la imagen</label>
    <input type="text" name="thumbnail" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
     <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Cantidad disponible</label>
    <input type="text" name="stock" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    <select class="form-select my-3" name="status" aria-label="Default select example">
      <option selected>Seleccione el estado</option>
      <option value="true">True</option>
      <option value="false">False</option>
  </select>
  <button type="submit" value="Create" class="btn btn-primary">Agregar producto</button>
</form>

<div class="line"></div>

<h1 class="text-center my-3">Productos agregados</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div id="product-list" class="d-flex flex-wrap justify-content-center">

            </div>
        </div>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/products.js"></script>